{
  "name": "node-nestjs-graphql-starter",
  "version": "1.1.0",
  "main": "index.js",
  "author": "Horus Lugo <horusgoul@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"yarn build --watch\" \"yarn gql:typings --watch\"",
    "build": "rollup --config rollup.config.js",
    "typecheck": "tsc",
    "start": "node dist/index.js",
    "lint:base": "eslint --ext .js,.json,.ts",
    "lint": "yarn lint:base src",
    "test": "jest",
    "test:debug": "node --inspect ./node_modules/.bin/jest --watch --runInBand --testTimeout 999999",
    "gql:typings": "graphql-codegen --config codegen.yml"
  },
  "lint-staged": {
    "src/**/*.{ts,js,json}": [
      "yarn lint:base --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn typecheck && lint-staged"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@graphql-codegen/add": "^2.0.1",
    "@graphql-codegen/cli": "^1.17.8",
    "@graphql-codegen/typescript": "^1.17.9",
    "@graphql-codegen/typescript-resolvers": "^1.17.9",
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.2",
    "@nestjs/testing": "^7.4.4",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-run": "^2.0.2",
    "@rollup/plugin-typescript": "^6.0.0",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/jest": "^26.0.13",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^14.6.3",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "babel-jest": "^26.3.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "rollup": "^2.27.1",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-node-externals": "^2.2.0",
    "ts-jest": "^26.3.0",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "@nestjs/common": "^7.4.4",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.4.4",
    "@nestjs/graphql": "^7.6.0",
    "@nestjs/platform-express": "^7.4.4",
    "apollo-server-express": "^2.17.0",
    "core-js": "^3.6.5",
    "dotenv": "^8.2.0",
    "graphql": "^15.3.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-scalar": "^0.0.11",
    "graphql-tools": "^6.2.2",
    "graphql-type-json": "^0.3.2",
    "reflect-metadata": "^0.1.13",
    "regenerator-runtime": "^0.13.7",
    "rxjs": "^6.6.3"
  }
}
